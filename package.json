{
    "name": "local-settings",
    "displayName": "Local Settings",
    "description": "Override desired user settings with local settings for smoother settings sync.",
    "version": "0.0.1",
    "publisher": "dece1312",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "localSettings.loadLocalSettings",
                "title": "Local settings: Load"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "LocaSettings configuration",
            "properties": {
                "localSettings.fileName": {
                    "type": "string",
                    "default": "localSettings.json",
                    "description": "File name storing the local settings on this machine, in the User folder."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
